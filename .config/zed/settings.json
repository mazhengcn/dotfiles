{
  "vim_mode": true,
  // Editor
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": true
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  // Theme
  "theme": "Catppuccin Espresso (Blur)",
  "icon_theme": "Catppuccin Frapp√©",
  "project_panel": {
    "sticky_scroll": false
  },
  // Typography
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "Maple Mono NF CN",
  "ui_font_size": 20,
  "ui_font_features": {
    "calt": true
  }
}
