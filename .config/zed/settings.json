{
  // Editor
  "autosave": "on_window_change",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true
  },
  "inline_code_actions": true,
  "soft_wrap": "editor_width",
  "vim_mode": true,
  // Theme
  "theme": "Catppuccin Espresso (Blur)",
  "icon_theme": "Catppuccin Mocha",
  // Typography
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "Maple Mono NF CN",
  "ui_font_size": 20,
  "ui_font_features": {
    "calt": true
  },
  // AI
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "model_parameters": []
  },
  // Extensions
  "auto_install_extensions": {
    "catppuccin-blur": true,
    "catppuccin-icons": true
  },
  // remote
  "ssh_connections": [
    {
      "host": "home",
      "args": [],
      "projects": [
        {
          "paths": ["/Users/zheng/.ghq"]
        }
      ]
    },
    {
      "host": "pi-sjtu",
      "args": [],
      "projects": []
    }
  ]
}
