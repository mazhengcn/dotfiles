{
  "vim_mode": true,
  // Editor
  "autosave": "on_window_change",
  "format_on_save": "on",
  "soft_wrap": "editor_width",
  // Theme
  "theme": "Catppuccin Espresso (Blur)",
  "icon_theme": "Catppuccin Mocha",
  "project_panel": {
    "sticky_scroll": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  // Typography
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "Maple Mono NF CN",
  "ui_font_size": 20,
  "ui_font_features": {
    "calt": true
  },
  // AI
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": []
  },
  // Extensions
  "auto_install_extensions": {
    "catppuccin-blur": true,
    "catppuccin-icons": true
  }
}
