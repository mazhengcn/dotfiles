{
  // Editor
  "autosave": "on_window_change",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true
  },
  "inline_code_actions": true,
  "soft_wrap": "editor_width",
  "vim_mode": true,
  // Theme
  "theme": "Catppuccin Espresso (Blur)",
  "project_panel": {
    "dock": "left",
    "sticky_scroll": false
  },
  "icon_theme": "Catppuccin Mocha",
  // Typography
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_size": 18,
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_family": "Maple Mono NF CN",
  "ui_font_size": 20,
  "ui_font_features": {
    "calt": true
  },
  // Extensions
  "auto_install_extensions": {
    "catppuccin-blur": true,
    "catppuccin-icons": true
  },
